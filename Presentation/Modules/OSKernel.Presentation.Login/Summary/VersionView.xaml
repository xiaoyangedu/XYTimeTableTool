<UserControl x:Class="OSKernel.Presentation.Login.Summary.VersionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:OSKernel.Presentation.Login.Summary"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <!--版本信息-->
    <Grid Background="White">
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center">

            <Image Source="{DynamicResource icon_qrcode}" Width="150"/>

            <TextBlock Text="{Binding Version}"
                       Opacity="0.7"
                       Margin="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />

            <TextBlock Text="Copyright ©  2020"
                       Opacity="0.7"
                       Margin="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />

        </StackPanel>
    </Grid>
</UserControl>
