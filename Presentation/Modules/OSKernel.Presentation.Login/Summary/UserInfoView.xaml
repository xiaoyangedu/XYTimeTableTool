                                  Fill="{StaticResource main_lightgroud}"
                                  Stretch="Fill" />
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <StackPanel Margin="10,0">
                <TextBlock FontSize="15"
                           Foreground="Gray"
                           Grid.Row="1"
                           Margin="2"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center">
                <Run Text="ID   :"
                     FontWeight="Bold" />
                <Run Text="{Binding Id}" />
                </TextBlock>

                <TextBlock FontSize="15"
                           Foreground="Gray"
                           Grid.Row="1"
                           Margin="2"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left">
                 <Run Text="用户:"  FontWeight="Bold"/>
            <Run Text="{Binding Name}"/>
                </TextBlock>

                <TextBlock FontSize="15"
                           Foreground="Gray"
                           Grid.Row="1"
                           Margin="2"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left">
                 <Run Text="类型:"
                      FontWeight="Bold" />
            <Run Text="{Binding Type}" />
                </TextBlock>

            </StackPanel>
            

           
        </StackPanel>

        <Grid Grid.Row="1"
              Margin="20"
              Background="White">

        </Grid>

        <Button  Grid.Row="2"
                 Content="修改信息"
                 Margin="0,0,20,0"
                 Width="100"
                 HorizontalAlignment="Right"
                 Command="{Binding ModifyCommand}"
                 Style="{StaticResource CreateCaseButtonStyle}" />
    </Grid>
</UserControl>
