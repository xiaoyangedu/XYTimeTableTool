<metro:MetroWindow x:Class="OSKernel.Presentation.Arranging.Administrative.Modify.Algo.ClassHour.Dialog.CreateSameStarting"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                   xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
                   xmlns:local="clr-namespace:OSKernel.Presentation.Arranging.Administrative.Modify.Algo.ClassHour.Dialog"
                   mc:Ignorable="d"
                   Title="{Binding TitleString}"
                   Style="{DynamicResource MetroWindowStyle}"
                   WindowStartupLocation="CenterOwner"
                   x:Name="win"
                   Height="600"
                   Width="800">
    <!--多个课时有相同的规则（Day Time Hour）-->
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <local:FilterView Grid.ColumnSpan="2" />

        <Grid Grid.Row="1"
              Margin="10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Label Content="待选"
                   Foreground="White"
                   Background="{DynamicResource main_background}"
                   HorizontalAlignment="Left" />
            <ListBox Grid.Row="1"
                     Name="source_list"
                     DisplayMemberPath="Display"
                     BorderThickness="0,1"
                     BorderBrush="{DynamicResource main_background}"
                     ItemsSource="{Binding ClassHours}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseDoubleClick">
                        <i:InvokeCommandAction CommandParameter="{Binding SelectedItem,ElementName=source_list}"
                                               Command="{Binding DataContext.SourceCommand,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type metro:MetroWindow}}}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <ListBox.ContextMenu>
                    <ContextMenu>
                        <MenuItem Command="{Binding SelectedAllListCommand}"
                                  Header="全选" />
                    </ContextMenu>
                </ListBox.ContextMenu>
            </ListBox>
        </Grid>

        <Grid Grid.Row="1"
              Grid.Column="1"
              Margin="10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Label Content="已选"
                   Foreground="White"
                   Background="{DynamicResource main_background}"
                   HorizontalAlignment="Left" />
            <ListBox Grid.Row="1"
                     DisplayMemberPath="Display"
                     Name="target_list"
                     BorderThickness="0,1"
                     BorderBrush="{DynamicResource main_background}"
                     ItemsSource="{Binding TargetHours}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseDoubleClick">
                        <i:InvokeCommandAction CommandParameter="{Binding SelectedItem,ElementName=target_list}"
                                               Command="{Binding DataContext.TargetCommand,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type metro:MetroWindow}}}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <ListBox.ContextMenu>
                    <ContextMenu>
                        <MenuItem Command="{Binding ClearAllListCommand}"
                                  Header="清除" />
                    </ContextMenu>
                </ListBox.ContextMenu>
            </ListBox>
        </Grid>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="2"
                    Margin="5"
                    VerticalAlignment="Top">
            <TextBlock Text="权重%(推荐:0%-100%)"
                       VerticalAlignment="Center" />
            <TextBox Margin="5"
                     Width="100"
                     Text="{Binding Weight,UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="启用"
                       VerticalAlignment="Center" />
            <CheckBox Grid.Column="2"
                      IsChecked="{Binding IsActive}"
                      Margin="5" />
        </StackPanel>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="3"
                    Grid.ColumnSpan="2"
                    Margin="0,20"
                    HorizontalAlignment="Center">
            <Button Content="保存"
                    Command="{Binding SaveCommand}"
                    CommandParameter="{Binding ElementName=win}"
                    Margin="5,0" />
            <Button Content="取消"
                    Command="{Binding CancelCommand}"
                    CommandParameter="{Binding ElementName=win}"
                    Margin="5,0" />
        </StackPanel>
    </Grid>
</metro:MetroWindow>
