<UserControl x:Class="OSKernel.Presentation.Arranging.Administrative.Modify.Views.CourseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:xy="clr-namespace:OSKernel.Presentation.CustomControl;assembly=OSKernel.Presentation.CustomControl"
             xmlns:metrol="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:local="clr-namespace:OSKernel.Presentation.Arranging.Administrative.Modify.Views"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <!--课程-->
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <xy:TitleBar Title="点击内置课程，可勾选系统内置课程进行批量添加，也可通过添加课程来添加新课程。" />

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Background="White"
                  Grid.Row="1"
                  Margin="0,10,0,0"
                  Height="40">
                
                <StackPanel HorizontalAlignment="Left"
                            Orientation="Horizontal"
                            Margin="5,0"
                            VerticalAlignment="Center">

                    <!--搜索框-->
                    <TextBox  HorizontalAlignment="Left"
                              metrol:TextBoxHelper.Watermark="搜索课程"
                              Text="{Binding SearchCourse,UpdateSourceTrigger=PropertyChanged}"
                              Margin="10,0"
                              Width="200" />

                    <Button Content="批量删除"
                            Width="70"
                            Height="30"
                            Style="{DynamicResource BatchDeleteButtonStyle}"
                            Command="{Binding BatchDeleteCommand}"
                            Margin="2,0" />
                    
                    <Button Content="内置课程"
                            Width="70"
                            Height="30"
                            Command="{Binding SystemCourseCommand}"
                            Margin="2,0" />

                    <Button Content="添加课程"
                            Width="70"
                            Height="30"
                            Command="{Binding CreateCommand}"
                            Margin="2,0" />    

                </StackPanel>

                <Button Content="保存"
                        Width="70"
                        Height="30"
                        Command="{Binding SaveCommand}"
                        Margin="5"
                        HorizontalAlignment="Right"
                        Style="{DynamicResource OpratorButtonStyle}" />

                <Rectangle Height="1"
                           Fill="{StaticResource CB_Separation}"
                           Margin="2,0"
                           VerticalAlignment="Bottom" />
            </Grid>

            <Grid Margin="0,0,0,10"
                  Grid.Row="2"
                  Background="White">

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <CheckBox Content=" 全选"
                          Cursor="Hand"
                          IsChecked="{Binding AllChecked}"
                          HorizontalAlignment="Left"
                          Margin="15,5,0,0" />

                <ScrollViewer  Grid.Row="1">
                    <ItemsControl Name="tst_itemControl"
                                  ItemsSource="{Binding Courses}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Width="200"
                                          IsChecked="{Binding IsChecked}"
                                          ToolTip="{Binding ID}"
                                          Margin="5"
                                          Height="100">
                                    <CheckBox.Template>
                                        <ControlTemplate TargetType="CheckBox">
                                            <Grid>
                                                <Border Margin="5"
                                                        Name="bd_background"
                                                        CornerRadius="5"
                                                        Background="White"
                                                        BorderThickness="1">
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="#D4D5D6"
                                                                          ShadowDepth="1"
                                                                          Opacity="0.8"
                                                                          BlurRadius="5" />
                                                    </Border.Effect>
                                                </Border>
                                                <Grid Margin="5">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="*" />
                                                        <RowDefinition Height="auto" />
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition  Width="70" />
                                                        <ColumnDefinition Width="80*" />
                                                    </Grid.ColumnDefinitions>

                                                    <CheckBox  HorizontalAlignment="Right"
                                                               VerticalAlignment="Top"
                                                               Grid.Column="1"
                                                               IsChecked="{Binding IsChecked}"
                                                               Margin="5" />

                                                    <Button Width="35"
                                                            Height="35"
                                                            Content="点击设置颜色"
                                                            CommandParameter="{Binding}"
                                                            Command="{Binding DataContext.SetColorCommand,RelativeSource={RelativeSource AncestorType=ItemsControl}}">
                                                        <Button.Template>
                                                            <ControlTemplate>
                                                                <Rectangle Fill="{Binding ColorString,Converter={StaticResource ColorStringConverter}}" />
                                                            </ControlTemplate>
                                                        </Button.Template>
                                                    </Button>
                                                    <!--<Image Source="{StaticResource icon_course}"
                                                           Width="35"
                                                           Height="35" />-->

                                                    <TextBlock FontSize="14"
                                                               FontWeight="Bold"
                                                               Grid.Column="1"
                                                               Text="{Binding Name}"
                                                               VerticalAlignment="Center"
                                                               Opacity="0.7" />

                                                </Grid>
                                            </Grid>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver"
                                                         Value="true">
                                                    <Setter Property="BorderBrush"
                                                            TargetName="bd_background"
                                                            Value="{DynamicResource case_isMouseOver}" />
                                                    <Setter Property="Cursor"
                                                            Value="Hand" />
                                                </Trigger>

                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </CheckBox.Template>
                                </CheckBox>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>

            </Grid>

        </Grid>
    </Grid>
</UserControl>
