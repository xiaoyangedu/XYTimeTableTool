<metro:MetroWindow x:Class="OSKernel.Presentation.Arranging.Mixed.Dialog.CreateClassWindow"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:local="clr-namespace:OSKernel.Presentation.Arranging.Dialog"
                   xmlns:metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                   Style="{StaticResource MetroWindowStyle}"
                   WindowStartupLocation="CenterOwner"
                   xmlns:xy="clr-namespace:OSKernel.Presentation.CustomControl;assembly=OSKernel.Presentation.CustomControl"
                   mc:Ignorable="d"
                   Title="新建班级"
                   SizeToContent="Height"
                   Width="500">
    <Grid>
        <!--创建班级-->
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <TextBox  metro:TextBoxHelper.Watermark="班级"
                      VerticalContentAlignment="Top"
                      Focusable="True"
                      Name="txt_class"
                      AcceptsReturn="True"
                      Height="120"/>

            <StackPanel Grid.Row="1"
                        Margin="5,0"
                        Orientation="Horizontal"
                        HorizontalAlignment="Left">

                <TextBlock Text="班额"
                           Margin="0,0,5,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center" />

                <TextBox  Margin="2,2,2,0"
                          Grid.Column="1"
                          Name="txt_capacity"
                          ToolTip="班额"
                          Width="100"
                          Text="5" />
            </StackPanel>

            <TextBlock  Grid.Row="2"
                        Margin="0,2"
                        VerticalAlignment="Center"
                        Name="txt_message"
                        Visibility="Collapsed"
                        Foreground="{StaticResource local_red}" />

            <xy:TitleBar Grid.Row="3" 
                         Margin="0,2,0,0"
                         Title="输入班级名称，回车键换行可继续添加，或可通过复制excel表格纵向一列数据批量粘贴到输入框" />
            
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="5"
                        Grid.Row="4">

                <Button Content="保存"
                        Name="btn_save"
                        Margin="5"
                        Click="Btn_save_Click"
                        IsDefault="True"
                        Style="{StaticResource OpratorButtonStyle}" />

                <Button Content="取消"
                        Name="btn_cancel"
                        Click="Btn_cancel_Click"
                        Margin="5" />

            </StackPanel>

        </Grid>
    </Grid>
</metro:MetroWindow>
